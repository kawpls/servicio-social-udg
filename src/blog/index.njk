---
eleventyExcludeFromCollections: true
layout: blog
---

<section class="mt-15">
  {% for post in collections.all | reverse %}
    <article class="my-8">
      <h2 class="mb-2 text-3xl font-bold text-gray-900">
        <a href="{{ post.url | url }}">
          {% if post.data.title %}
            {{ post.data.title }}
          {% else %} Untitled {% endif %}
        </a>
      </h2>
      <p class="mb-3 text-base leading-6 text-gray-500">
        <time>
          {{ post.date | readableDate }}
        </time>
        by {{ post.data.author }}
      </p>
      {% for tag in post.data.tags %}
        <p class="p-3 mb-2 mr-2 badge">#{{tag}}</p>
      {% endfor %}
      {% if post.data.description %}
        <p class="mb-3 text-lg text-gray-500">{{ post.data.description }}</p>
      {% endif %}
      <p>
        <a href="{{ post.url | url }}" class="text-lg font-bold text-indigo-500">
        Read more â†’
      </a>
      </p>
    </article>
  {% endfor %}
</section>