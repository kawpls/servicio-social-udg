<nav id="nav" class="top-0 z-50 flex items-center justify-start min-w-full p-4 bg-secondary">
  <div class="">
    <a href="/" class="w-2/4 lg:w-1/6">
      <img src="/static/img/logo.webp" alt="logo" class="object-cover object-center w-full h-full"/>
    </a>
  </div>
  <div class="flex-row justify-end flex-grow hidden mr-5 space-x-4 lg:flex">
    <div class="hidden gap-2 lg:flex">
      {% if navigation.items %}
        {% for item in navigation.items %}
          <a href="{{ item.url }}" class="flex gap-2 p-2 mx-auto transition duration-300 ease-in border-b-4 border-transparent hover:border-primary">
            <img src="{{item.icon}}" alt="icon-{{item.text}}"/>
            <p  class="text-xl font-bold ">
              {{ item.text }}
            </p>
          </a>
        {% endfor %}
      {% endif %}
    </div>
  </div>
  <div class="ml-auto dropdown dropdown-end">
    <label tabindex="0" class="btn btn-ghost lg:hidden">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16"/>
      </svg>
    </label>
    <ul tabindex="0" class="p-2 mt-4 shadow-2xl menu dropdown-content bg-base-100 rounded-box w-52">
      {% if navigation.items %}
        {% for item in navigation.items %}
          <div class="flex gap-2 mx-auto my-4">
            <img src="{{item.icon}}" alt="icon-{{item.text}}"/>
            <a href="{{ item.url }}" class="text-xl font-bold ">
              {{ item.text }}
            </a>
          </div>
        {% endfor %}
      {% endif %}
    </ul>
  </div>
</nav>